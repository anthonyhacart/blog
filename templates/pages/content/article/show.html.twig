{% extends 'base.html.twig' %}

{% block body %}
    <section class="text-gray-400 body-font bg-gray-900">
        <div class="container px-5 py-24 mx-auto">
            <div class="flex flex-col text-center w-full mb-12">
                {% for tag in article.tags %} <twig:Tag tag="{{ tag }}" />{% endfor %}
                <h1 class="sm:text-3xl text-2xl font-medium title-font mb-4 text-white">{{ article.title }}</h1>
            </div>
            <div class="lg:w-2/3 mx-auto">
                <article class="leading-relaxed text-base prose dark:prose-invert prose-h1:font-bold prose-h1:text-xl prose-a:text-pink-600 prose-p:text-justify prose-img:rounded-xl">
                    {{ article.content|markdown_to_html }}
                </article>
            </div>
        </div>
    </section>
{% endblock %}